<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-0">
        <p class="thumbnail">
          <%= image_tag(@project.image.show) %>
        </p>
      </div>

    <div class="col-md-6">
    <div class="pull-right">
      <h1> <%= @project.name %> </h1>
      <h3>已筹到 ¥ <%= @project.fund_progress %> </h3>
      <h3>筹款目标 ¥ <%= @project.fund_goal %></h3>
      <h5>当前已支持 <%= number_with_precision(@project.fund_progress.to_f / @project.fund_goal * 100, :precision => 2) %>%</h5>
      <h5>当前已有 <%= @project.backer_quantity %> 人支持</h5>
      <%= link_to("支持项目", project_plans_path(@project), :class => "btn btn-success" ) %>
    </div>
  </div>
</div>
</div>

<hr>
  <div class="container-fluid well">
    <div class="row">
      <div class="col-xs-12 col-sm-9 col-md-8-offset-1">
        <p><%= simple_format(@project.description) %></p>
      </div>
    </div>
  </div>
