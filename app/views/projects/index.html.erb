<div class="container-fluid">
  <div class="row">
  <div class="thumbnail">
   <img style="width:100%" src="/images/Creator.png"></img>
   <!-- <div class="well">
     這裏擺 Hero Image （暫時不能妨礙開發工作）
   </div> -->
 </div>
  </div>
      <div class="row">
        <% @projects.each do |project| %>
        <div class="col-md-6 col-md-offset-0 well">
          <%= link_to(image_tag(project.image.show), project_path(project), class: "thumbnail") %>
            <h2><%= link_to(project.name, project_path(project)) %></h2>
            <p>筹集目标金额 ¥ <%= project.fund_goal %></p>
            <p>已筹到 ¥ <%= project.fund_progress %> &nbsp| &nbsp
                          <span>进度 <%= number_with_precision(project.fund_progress.to_f / project.fund_goal * 100, :precision => 2) %>%</span>
</p>
            <p>当前已有 <%= project.backer_quantity %> 人支持</p>
            <%= link_to("支持项目", project_plans_path(project), :class => "btn btn-success" ) %>
        </div>
        <% end %>
      </div>
</div>
