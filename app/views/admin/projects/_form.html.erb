<%= simple_form_for [:admin, @project] do |f| %>

  <%= f.input :name, :label =>"项目名称" %>
  <%= f.trix_editor :description, :label =>"项目描述" %>
  <% if ["new", "create"].include?(controller.action_name) %>
    <%= f.input :user_id, :label =>"项目发起者" %>
  <% end %>
  <%= f.input :fund_goal, :label =>"筹款目标" %>

  <%= f.input :is_hidden %>
  <%= f.input :video, :label => "视频（请贴优酷视频公开链接）" %>
  <%= f.input :image, :label =>"主题图片" %>
  <%= f.input :category_id,:collection => @categories,:label_method => :chs_name,:            :user_id => 1,:label => "请选择分类",:include_blank => false %>


  <% if ["new", "create"].include?(controller.action_name) %>
    <%= f.submit "创建项目", class: "btn btn-success" %>
  <% else %>
  <%= link_to("放弃更新", admin_projects_path, class: "btn btn-default" ) %>
    <%= f.submit "提交更新", class: "btn btn-info" %>
  <% end %>
<% end %>
