<%= render "head" %>

<% if @projects.size == 0 %>
<%= render_project_empty_warning %>
<% else %>
<table class="table table-boldered">
    <thead>
      <tr>
        <th>#</th>
          <th>众筹项目</th>
          <th>
            <li style="list-style-type:none;" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    类型
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><%= link_to("全部", admin_projects_path) %></li>
                    <% @categories.each do |category| %>
                    <li><%= link_to(category.chs_name, admin_projects_path(category_id: category.id)) %></li>
                    <% end %>
                </ul>
            </li>
        </th>
        <th>项目发起者</th>
        <th>回报数量</th>
        <th>筹款目标</th>
        <th>支持人数</th>
        <th>进度</th>
        <th>状态</th>
        <th>操作</th>
    </tr>
</thead>
<tbody>
    <% @projects.each_with_index do |project, index| %>
      <td>
        <%= index + 1 %>
      </td>
        <td>
            <%= link_to(project.name, project_path(project)) %>
            <br/>
            <%= render_project_image(project,:thumb) %>
        </td>
        <td>
            <%= project.category.chs_name %>
        </td>
        <td>
            <%#= User.find(project.user_id).user_name %>
            <%= project.user.user_name %>
        </td>
        <td>
            <%= link_to(project.plans_count, admin_project_plans_path(project)) %>
        </td>
        <td>
            ¥<%= project.fund_goal %>
        </td>
        <td>
            <%= project.backer_quantity %>
            人
        </td>
        <td>
            <%= number_with_precision(project.fund_progress.to_f / project.fund_goal * 100, :precision => 2) %>
            %
        </td>
        <td>
            <%= render_project_status(project) %>
        </td>
        <td>

            <% if project.online? %>
            <%= link_to("结束众筹", offline_admin_project_path(project),method: :post, :class => "btn btn-sm btn-default") %>
            <% end %>
            <% if ["project_created", "verifying"].include?(project.aasm_state) %>
            <%= link_to("审核", admin_projects_verify_path(id: project), :class => "btn btn-sm btn-default") %>
            <% end %>

            <%= link_to("编辑", edit_admin_project_path(project), :class => "btn btn-sm btn-default") %>
            <%#= link_to("管理筹款回报", admin_project_plans_path(project), :class => "btn btn-sm btn-default") %>
            <%= link_to("删除", admin_project_path(project), :method => :delete, :data => { :confirm => "删除项目后不可恢复，您确定要删除吗?" }, :class => "btn btn-sm btn-default") %>
        </td>
    </tr>
    <% end %>
</tbody>
</table>
<% end %>

<div class="text-center">
<%= will_paginate @projects %>
</div>
