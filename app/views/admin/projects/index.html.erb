<h1>众筹项目管理面板</h1>
<div class="pull-right">
  <%= link_to("新增众筹项目", "#", :class => "btn btn-success" ) %>
</div>
<table class="table table-boldered">
  <thead>
  <tr>
    <th>众筹项目</th>
    <th>概览</th>
    <th>操作</th>
  </tr>
</thead>
<tbody>
  <% @projects.each do |project| %>
  <tr>
    <td>
      <%= link_to(project.name, "#",) %>
      <%#= link_to(image_tag(project.imgage_url(:small)), project_path(project),) %>
    </td>
    <td>
      <%= project.description %>
    </td>
    <td>
      <%= link_to("编辑", edit_admin_project_path(project), :class => "btn btn-xs btn-info") %>
      <%= link_to("删除", admin_project_path(project), :method => :delete, :data => { :confirm => "删除项目后不可恢复，您确定要删除吗?" }, :class => "btn btn-xs btn-danger") %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
