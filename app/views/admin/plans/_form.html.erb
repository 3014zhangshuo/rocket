<%= simple_form_for [:admin, @project, @plan] do |f| %>
<%= f.input :title, label: "方案名称", input_html: {class: "form-control"} %>
<%= f.input :description, label: "方案描述", input_html: {class: "form-control"} %>
<%= f.input :price, label: "方案价格", input_html: {class: "form-control"} %>
<%= f.submit "提交" %>
<% end %>
