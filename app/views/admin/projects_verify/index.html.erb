

<%= render "admin/projects/head" %>

<table class="table table-boldered">
    <thead>
        <tr>
            <th>ID</th>
            <th>众筹项目</th>
            <th>回报数量</th>
            <th>筹款目标</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% @projects.each do |project| %>
        <tr>
            <td>
                <%= project.id %>
            </td>
            <td>
                <%= link_to(project.name, project_path(project)) %>
                <br/>
                <%= render_project_image(project,:thumb) %>
            </td>
            <td>
                <%= link_to(project.plans_count, account_project_plans_path(project)) %>
            </td>
            <td>
                ¥<%= project.fund_goal %>
            </td>
            <td>
                <%= render_project_status(project) %>
            </td>
            <td>
                <%= link_to("审核项目", admin_projects_verify_path(id: project), :class => "btn btn-sm btn-default") %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
