<h1> 编辑用户信息 </h1>
<%= simple_form_for [:admin,@user] do |f| %>


<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">用户名</h3>
  </div>
</div>
<div class="well trix-content" style="margin-top: 10px;margin-bottom:20px;">
  <%= f.trix_editor :user_name %>
</div>

<%= f.input :email, :readonly => true, :label =>"邮箱地址" %>
<%= link_to("放弃更新", admin_users_path, class: "btn btn-default" ) %>
<%= f.submit "提交更新", class: "btn btn-info" %>

<% end %>
