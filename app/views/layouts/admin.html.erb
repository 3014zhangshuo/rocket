<!DOCTYPE html>
<html>
    <head>
        <title>管理员面板</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <div class="container-fluid">
            <%= render "common/navbar" %>
            <div class="row">
            <%= render "common/flashes" %>
              <div class="col-md-8 col-md-offset-2">
                    <ul class="nav nav-tabs">
                        <li role="presentation"><%= active_link_to "众筹项目管理", admin_projects_path, :class_active => 'enabled' %> </li>
                        <li role="presentation"><%= active_link_to "分类管理",  admin_categories_path,:class_active => 'enabled' %> </li>
                        <li role="presentation"><%= active_link_to "订单管理", admin_orders_path,:class_active => 'enabled' %></li>
                        <li role="presentation"><%= active_link_to "用户管理",  admin_users_path, :class_active => 'enabled'%></li>
                        <li role="presentation"><%= active_link_to "资金流水",  admin_bills_path, :class_active => 'enabled'%></li>
                    </ul>
              </div>
            </div>
          <div class="row">
              <div class="col-md-8 col-md-offset-2">
                <%= yield %>
              </div>
            </div>
      </div>
        <%= render "common/footer" %>
    </body>
</html>
