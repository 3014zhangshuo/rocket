<!DOCTYPE html>
<html>
    <head>
        <title>Knowledge Store Admin Panel</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body style="background-image: url(/images/Body_bg.png);">

        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <div class="row">
              <div class="col-md-2">
                <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                   <li class="active"><%= link_to("众筹项目管理", "#",) %> </li>
                   <li class="active"><%= link_to("支持方案管理", "#",) %> </li>
                   <li class="active"><%= link_to("用户管理",  "#", ) %> </li>
                </ul>
              </div>

              <div class="col-md-10">
                <%= yield %>
              </div>
        </div>

        <%= render "common/footer" %>

    </body>
</html>
