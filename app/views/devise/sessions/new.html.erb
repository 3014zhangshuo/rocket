<div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
  <div class="well" id="devise-input-width">
    <h2 class="devise-h2">登录</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-group margin-bottom-sm devise-form">
        <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
        <%= f.input :email, required: false, autofocus: true,label:false, :placeholder => "电子邮箱" %>
      </div>
      <div class="input-group devise-form">
        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
        <%= f.input :password, required: false,label:false, :placeholder => "密码"  %>
      </div>
      <div class="devise-form">
        <%= f.input :remember_me, inline_label: '记住我', as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "登录", :class => "btn btn-success btn-block"  %>
      </div>
    <% end %>
    <br />
    <%= render "devise/shared/links" %>
  </div>
</div>
