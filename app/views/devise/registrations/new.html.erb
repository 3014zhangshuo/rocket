      <div class="input-group margin-bottom-sm devise_form">
        <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
        <!-- <input class="form-control" type="text" placeholder="Email address"> -->
        <%= f.input :email, required: true, label:false, autofocus: true, :placeholder => "电子邮箱", :input_html => {:maxlength =>2,:style=> 'width: 300px'} %>
      </div>
      <%#= f.input :phone_number, required: true, label:false, autofocus: true, hint: "请通过下方滑块验证之后再点击发送短信随机密码", :placeholder => "手机号"%>
