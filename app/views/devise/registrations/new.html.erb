        <%#= link_to("", "javascript:void(0)", class: "btn btn-default", id: "send_verification_code") %>
        <%#= f.button :button, "发送短信随机密码" ,  %>
      </div> -->
      <!-- <br /> -->
      <%#= f.input :captcha, required: true, label:false, autofocus: true, :placeholder => "短信随机密码" %>
      <div class="input-group devise_form">
        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
        <%#= f.input :password, class: "form-control" ,required: true, label:false, hint: ("至少 #{@minimum_password_length}  位英文字母和数字组合" if @minimum_password_length), :placeholder => "密码" %>
        <%= f.input :password, class: "form-control" ,required: true, label:false, :placeholder => "密码,至少8位英文数字组合",:input_html => {:maxlength =>2,:style=> 'width: 300px'}  %>
      </div>
      <div class="input-group devise_form">
        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
