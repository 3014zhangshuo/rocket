<h2>我发起的项目</h2>
<div class="pull-right">
    <%= link_to("新建众筹项目", new_account_project_path, :class => "btn btn-success" ) %>
</div>
<% if @projects.count == 0 %>
<div>
   <p>您尚无发起的项目，请创建</p>
</div>


<% else %>

<table class="table table-boldered">
    <thead>
        <tr>
            <th>众筹项目</th>
            <th>方案数量</th>
            <th>动态数量</th>
            <th>筹款目标</th>
            <th>支持人数</th>
            <th>进度</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% @projects.each do |project| %>
        <tr>
            <td>
                <%= link_to(project.name, project_path(project)) %>
                <br/>
                <img src="<%= project.image.thumb %>" width="120" height="90">
            </td>
            <td>
                <%= link_to(project.plans_count, account_project_plans_path(project)) %>
            </td>
            <td>
                <%= link_to(project.posts.count, account_project_posts_path(project))  %>
            </td>
            <td>
                ¥<%= project.fund_goal %>
            </td>
            <td>
                <%= project.backer_quantity %>
                人
            </td>
            <td>
                <%= render_project_funding_progress(project) %>
            </td>
            <td>
                <%= render_project_status(project) %>
            </td>
            <td>
              <% if ["unverified", "project_created", "offline"].include?(project.aasm_state) %>
                <%= link_to("编辑项目", edit_account_project_path(project), :class => "btn btn-sm btn-default") %>
              <% end %>

                <%= link_to("申请上线", apply_for_verification_account_project_path(project), :method => :post,  :class => "btn btn-sm btn-default") %>

                <%#= link_to("管理筹款方案", account_project_plans_path(project), :class => "btn btn-sm btn-default") %>
                <%= link_to("管理动态", account_project_posts_path(project), :class => "btn btn-sm btn-default") %>
                <% if ["project_created", "unverified"].include?(project.aasm_state) %>
                  <%= link_to("删除", account_project_path(project), :method => :delete, :data => { :confirm => "删除项目后不可恢复，您确定要删除吗?" }, :class => "btn btn-sm btn-default") %>
                <% end %>
                <%= render_project_operation(project) %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<% end %>
