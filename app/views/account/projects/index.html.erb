<h2>我发起的项目</h2>
<div class="pull-right">
    <%= link_to("新建众筹项目", new_account_project_path, :class => "btn btn-success" ) %>
</div>
<% if @projects.size == 0 %>
<%= render_project_empty_warning %>
<% else %>

<table class="table table-boldered">
    <thead>
        <tr>
            <th>众筹项目</th>
            <th>回报数量</th>
            <th>动态数量</th>
            <th>筹款目标</th>
            <th>支持人数</th>
            <th>进度</th>
            <th>状态</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% @projects.each do |project| %>
        <tr>
            <td>
                <% if project.online? || project.offline? %>
                  <%= link_to(project.name, project_path(project)) %>
                <% else %>
                  <%= link_to(project.name, preview_project_path(project)) %>
                <% end %>
                <br/>
                <img src="<%= project.image.small %>" width="120" height="75">
            </td>
            <td>
                <%= link_to(project.plans_count, account_project_plans_path(project)) %>
            </td>
            <td>
                <%= link_to(project.posts.count, account_project_posts_path(project))  %>
            </td>
            <td>
                ¥<%= project.fund_goal %>
            </td>
            <td>
                <%= project.backer_quantity %>
                人
            </td>
            <td>
                <%= render_project_funding_progress(project) %>
            </td>
            <td>
                <%= render_project_status(project) %>
            </td>
            <td>
                <%= render_project_operation(project) %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<% end %>
