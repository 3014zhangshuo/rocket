<h1><%= link_to(@project.name,  project_plans_path(@project)) %>
    动态管理</h1>
<div class="pull-right">
    <%= link_to("发布动态",   new_account_project_post_path(@project), class: "btn btn-warning")  %>
</div>
<table class="table table-boldered" , style="width: 100%; table-layout: fixed;">
    <thead>
        <tr>
            <th>#</th>
            <th>动态内容</th>
            <th>操作  </th>
            <th>创建时间</th>
        </tr>
    </thead>
    <tbody>
      <%  @posts.each_with_index do |post, index| %>
      <tr>
            <td><%= index + 1 %></td>
            <td><%= render_post_description(post) %></td>
            <td>
                <%= link_to("删除", account_project_post_path(post.project, post), method: :delete,  class: "btn btn-sm btn-danger" , data: {confirm: "确认删除该方案么?"}) %>
            </td>

            <td><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
        <% end %>
    </tbody>
</table>
