<h1 class="text-center">全部方案</h1>
<table class="table table-boldered", style="width: 100%; table-layout: fixed;">
  <thead>
      <tr  style="white-space: nowrap; ">
          <th>
              #
          </th>
          <th>
              方案名称
          </th>
          <th>
              方案详情
          </th>
          <th >
              方案价格
          </th>
      </tr>
  </thead>
  <tbody>
      <% @plans.each do |plan| %>
      <tr>
          <td>
              #
          </td>
          <td>
              <%= link_to(plan.title, plan_path(plan)) %>
          </td>
          <td style="white-space: nowrap; overflow: hidden;">
              <%= plan.description %>
          </td>
          <td >
              <%= plan.price %>元
          </td>
      </tr>
      <% end %>
  </tbody>
</table>
