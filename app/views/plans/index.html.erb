<h1 class="text-center">全部方案</h1>
<table class="table table-boldered">
  <thead>
      <tr>
          <th>
              #
          </th>
          <th>
              方案名称
          </th>
          <th>
              方案详情
          </th>
      </tr>
  </thead>
  <tbody>
      <% @plans.each do |plan| %>
      <tr>
          <td>
              #
          </td>
          <td>
              <%= link_to(plan.title, plan_path(plan)) %>
          </td>
          <td>
              <%= plan.description %>
          </td>
      </tr>
      <% end %>
  </tbody>
</table>
